<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityConfiguracion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ProgressBar
                android:id="@+id/progressBar5"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/cpb_load"
                android:indeterminateDuration="1500"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imagen de menú" />

            <ImageView
                android:id="@+id/ivFotoRes"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/ic_album" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Restaurante" />

            <EditText
                android:id="@+id/edNombreRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ed_diseno"
                android:drawableLeft="@drawable/ic_fastfood"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Número de contacto" />

            <EditText
                android:id="@+id/edTelefonoRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ed_diseno"
                android:drawableLeft="@drawable/ic_phone"
                android:ems="10"
                android:inputType="textPersonName|phone" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horario" />


            <EditText
                android:id="@+id/edHorarioRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ed_diseno"
                android:drawableLeft="@drawable/ic_time"
                android:ems="10"
                android:inputType="textMultiLine|textPersonName"
                android:lines="3" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección" />

            <EditText
                android:id="@+id/edDireccionRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ed_diseno"
                android:drawableLeft="@drawable/ic_location"
                android:ems="10"
                android:inputType="textMultiLine|textPersonName"
                android:lines="3" />

            <Button
                android:id="@+id/btnGuardaConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="guardar"
                app:icon="@drawable/ic_cloud" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>