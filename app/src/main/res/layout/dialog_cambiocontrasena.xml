<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvInfoCambioPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Es la primera vez que inicia sesión, por favor cambia tu contraseña antes de iniciar"
            android:textAlignment="center"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/pbCambioPass"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/cpb_load"
            android:indeterminateDuration="1500" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña actual" />

        <EditText
            android:id="@+id/edCambioPassAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_diseno"
            android:ems="10"
            android:inputType="textPersonName|textPassword" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva contraseña" />

        <EditText
            android:id="@+id/edCambioPassNuev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_diseno"
            android:ems="10"
            android:inputType="textPersonName|textPassword" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirma contraseña" />

        <EditText
            android:id="@+id/edCambioPassConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_diseno"
            android:ems="10"
            android:inputType="textPersonName|textPassword" />

        <Button
            android:id="@+id/btnActualizarPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            app:icon="@drawable/ic_save" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>