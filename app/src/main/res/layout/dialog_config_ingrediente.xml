<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Establece si tus clientes deben seleccionar una cantidad mínima y/o máxima de ingredientes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ckConfIngMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="Mínimo" />

            <Button
                android:id="@+id/btnDisminuyeMin"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                app:icon="@drawable/remove_circle" />

            <TextView
                android:id="@+id/tvMinimoIng"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/btnAumentaMin"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                app:icon="@drawable/add_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ckConfIngMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="Máximo" />

            <Button
                android:id="@+id/btnDisminuyeMax"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:icon="@drawable/remove_circle" />

            <TextView
                android:id="@+id/tvMaximoIng"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/btnAumentaMax"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                app:icon="@drawable/add_circle" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvInfoConfigIng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Debes de ingresar una cantidad mayor a cero"
            android:textColor="#F31C1C"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCerrarIngreConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:backgroundTint="#E6D5D5"
                android:text="CANCELAR"
                app:icon="@drawable/ic_cancel" />

            <Button
                android:id="@+id/btnGuardaIngreConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:drawableTint="#DFCDCD"
                android:text="GUARDAR"
                app:icon="@drawable/ic_save" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>